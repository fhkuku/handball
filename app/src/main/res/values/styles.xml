<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/newcolor</item>
        <item name="colorPrimaryDark">@color/newcolor</item>
        <item name="colorAccent">@color/newcolor</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="StyleAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="Themeactivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/newcolor</item>
        <item name="colorPrimaryDark">@color/newcolor</item>
        <item name="colorAccent">@color/newcolor</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>
